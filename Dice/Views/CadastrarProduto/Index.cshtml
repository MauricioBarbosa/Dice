@{
    Layout = @"~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/views/CadastrarProduto/index.css" rel="stylesheet" />
    <link href="~/lib/fancybox/dist/jquery.fancybox.min.css" rel="stylesheet" />
}

<div class="bodyCad py-3 mb-5 d-flex align-items-center flex-column pb-4">
    <h2 class="mt-2 mb-4">Cadastrar Novo Produto</h2>
    <div class="error-box row col-8 d-none" id="erroGeral"></div>
    <form class="container-fluid w-65">
        <div class="form-row mb-2">
            <div class="col-12">
                <label>Nome do produto</label>
                <input type="text" class="form-control" id="nomeProduto" />
                <div class="error-box d-none" id="erroNome"></div>
            </div>
        </div>
        <div class="form-row d-flex justify-content-between my-2">
            <div class="col-4">
                <label>Fabricante:</label>
                <div class="d-flex align-items-center">
                    <input type="text" id="fabricanteProduto" class="form-control select-hover" disabled />
                    <a data-fancybox data-type="iframe"
                       data-src="/CadastrarProduto/IndexObterFabricantes"
                       href="javascript:;" class="ml-2 text-dark"><i class="fas fa-plus"></i></a>
                </div>
                <div class="error-box d-none" id="erroFabricante"></div>
            </div>
            <div class="col-3">
                <label>Categoria: </label>
                <div class="d-flex align-items-center">
                    <input id="categoriaProduto" class="form-control select-hover" disabled>
                    <a data-fancybox data-type="iframe"
                       data-src="/CadastrarProduto/IndexObterCategorias"
                       href="javascript:;" class="ml-2 text-dark">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
                <div class="error-box d-none" id="erroCategoria"></div>
            </div>
            <div class="col-4">
                <label>Preço: </label>
                <div class="d-flex align-items-center">
                    <input type="number" step="0.01" class="form-control select-hover" id="precoProduto" min=0.0 />
                </div>
                <div class="error-box d-none" id="erroPreco"></div>
            </div>
        </div>
        <div class="form-row">
            <label>Informações Adicionais:</label>
            <textarea class="form-control" id="descricaoProduto" rows=6></textarea>
        </div>
        <div class="form-row my-3">
            <label>Fotos:</label><br />
            <input type="file" id="imgProduto" class="col-12 form-control" accept=".jpeg,.jpg" multiple />
            <div class="error-box col-12 d-none" id="erroImg"></div>
        </div>
        <div class="form-row my-4 d-flex justify-content-end">
            <button class="col-2 btn btn-success mr-4" type="button" onclick="cadastrar.btnCadastrarOnClick()">Salvar</button>
            <button class="col-2 btn btn-danger" type="button">Cancelar</button>
        </div>
    </form>
</div>

@section js{
    <script src="~/views/CadastrarProduto/index.js"></script>
    <script src="~/lib/fancybox/dist/jquery.fancybox.min.js"></script>
}